
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

   
<div class="container">
    <h2>Edit Student </h2>
    <form action="/student/create" method="post">
        <div class="form-group">
            <label> Name </label>
            <input type="text" class="form-control" name="name" value="@ViewBag.student.name" />
        </div>
        <div class="form-group">
            <label> Gender </label><br />

            <label for="male"><input type="radio" class="form-control" name="gender" value="male" /> Male</label>
            <label for="female"><input type="radio" class="form-control" name="gender" value="female" /> Female</label>
        </div>
        <div class="form-group">
            <label> Address </label>
            <input type="text" class="form-control" name="address" value="@ViewBag.student.address"  />
        </div>
        <input type="submit" value="update" class="btn btn-primary" />
    </form>
</div>

