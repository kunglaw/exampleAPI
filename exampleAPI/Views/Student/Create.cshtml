@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="container">
        <form action="/student/create" method="post">
            <div class="form-group">
                <label> Name </label>
                <input type="text" class="form-control" name="name" />
            </div>
            <div class="form-group">
                <label> Gender </label><br />

                <label for="male"><input type="radio" class="form-control" name="gender" value="male" /> Male</label>
                <label for="female"><input type="radio" class="form-control" name="gender" value="female" /> Female</label>
            </div>
            <div class="form-group">
                <label> Address </label>
                <input type="text" class="form-control" name="address" />
            </div>
            <input type="submit" class="btn btn-primary" />
        </form>
    </div>
    
</div>


